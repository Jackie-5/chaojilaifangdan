@import "./common/reset.styl"

body
    background #f8f8f8
.index-box
    width 90%
    height 100%
    margin 0 auto
    margin-top 22px
    .title
        width 100%
        height 50px
        border-radius 10px
        position relative
        .top
            content ''
            width 30%
            height 50px
            position absolute
            top -10px
            left 20px
            z-index 1
            border-radius 10px
        i
            width 36px
            height 36px
            display block
            position relative
            z-index 10
            margin-left 14%
            float left
        .right-title
            text-align right
            color #fff
            line-height 50px
            height 50px
            font-size .625rem
            float right
        .left-icon-01
            background url(./i/index-icon-01.png)
            background-size 100%
        .left-icon-02
            background url(./i/index-icon-02.png)
            background-size 100%
        .left-icon-03
            background url(./i/index-icon-03.png)
            background-size 100%
        .left-icon-04
            background url(./i/index-icon-04.png)
            background-size 100%
    .bg-01
        background #4f60b2
    .bg-02
        background #ff8f1d
    .bg-03
        background #ba5fd0
    .bg-04
        background #7bc920

