.deal-title-bar-box
    width 100%
    height 44px
    display -webkit-box
    display box
    border-bottom 1px solid #cdcdcd
    font-size .8rem
    position fixed
    top 0
    left 0
    z-index 99
    background #fff
    .title
        box-flex 1
        -webkit-box-flex 1
        width 0
        display block
        color #ccc
        text-align center
        padding-top 10px
        span
            display block
            width 100%
            line-height 25px
            height 25px
            border-right 1px solid #e0e0e0
        &:last-child
            span
                border-right 0
    .active
        border-bottom 3px solid #25a9ff
        color #25a9ff

.deal-content
    padding-top 44px
    font-size .8rem
    background #ececec
    .deal-box
        background #fff
        margin-bottom 10px
        .search-result-list,.deal-state
            border-top 1px solid #e0e0e0
            border-bottom 1px solid #e0e0e0
            padding 9px 0
            background #fff
            padding-left 3%
            position relative
            margin-top 10px
            .search-list
                height 30px
                line-height 30px
                overflow hidden
                i
                    display block
                    width 18px
                    height 18px
                    float left
                    margin-top 7px
                .s-title
                    margin-left 10px
                    color #666
                    float left
                .s-cont
                    color #999
                    margin-left 20px
                    float left
                    .border
                        border-radius 5px
                        padding-right 27px
                        border 1px solid #ccc
                        height 27px
                        position relative
                        text-indent 8px
                        line-height 27px
                        i
                            width 11px
                            height 11px
                            display block
                            position absolute
                            background url(../i/border-icon.png) no-repeat
                            background-size 100%
                            top 3px
                            right 7px
                    a
                        display block
                        width 16px
                        height 16px
                        margin-left 10px
                        margin-top 8px
                        float left
                        &:last-child
                            margin-left 30px
                .font-color
                    color #25a9ff
                .time-icon
                    width 22px
                    height 17px
                    background url(../i/p-time-icon-2.png) no-repeat
                    float left
                    background-size 100%
                    margin-left 20px
                    margin-top 5px
                    position relative
                    input
                        position absolute
                        top 0
                        left 0
                        width 100%
                        height 100%
                        z-index 1
                        opacity 0
                        font-size 0
                        border 0
                .s-icon-1
                    background url(../i/s-icon-1.png) no-repeat
                    background-size 100%
                .s-icon-2
                    background url(../i/s-icon-2.png) no-repeat
                    background-size 100%
                .s-icon-3
                    background url(../i/s-icon-3.png) no-repeat
                    background-size 100%
                .s-icon-4
                    background url(../i/s-icon-4.png) no-repeat
                    background-size 100%
                .s-icon-5
                    background url(../i/s-icon-5.png) no-repeat
                    background-size 100%
                .s-icon-6
                    background url(../i/s-icon-6.png) no-repeat
                    background-size 100%
                .s-i-icon-5
                    background url(../i/s-i-icon-5.png) no-repeat
                    background-size 100%
                .s-i-icon-6
                    background url(../i/s-i-icon-6.png) no-repeat
                    background-size 100%
            &:first-child
                border-top 0
                margin-top 0


        .deal-state
            margin 0
            border 0
            padding-top 3px
            padding-bottom 0
            .deal-list
                height 43px
                line-height 30px
                overflow hidden
                &:last-child
                    height 42px
                .pay
                    height 34px
                    margin-left 30px
                    overflow hidden
                    padding 4px 0
                    .p-title
                        color #666
                        float left
                    .p-cont
                        float left
                        margin-left 20px
                        .border
                            border-radius 5px
                            padding-right 27px
                            border 1px solid #ccc
                            height 25px
                            position relative
                            text-indent 8px
                            line-height 23px
                            margin-top 2px
                            color #999999
                            i
                                width 11px
                                height 11px
                                display block
                                position absolute
                                background url(../i/border-icon.png) no-repeat
                                background-size 100%
                                top 8px
                                right 7px
                        .p-money,.p-time
                            padding 0 10px 0 20px
                            height 25px
                            border-radius 3px
                            overflow hidden
                            border 1px solid #ccc
                            margin-top 3px
                            line-height 24px
                            color #999999
                            i
                                float left
                                font-style normal
                            input,label
                                float left
                                border 0
                                background #fff
                                width 80px
                                height 25px
                                color #999999
                                line-height 25px
                        .p-time
                            label
                                width auto
                            i
                                display block
                                width 16px
                                height 16px
                                background url(../i/p-time-icon-1.png) no-repeat
                                background-size 100%
                                margin-top 6px
                                margin-left 7px

                    .p-cont-btn
                        width 25px
                        height 25px
                        background url(../i/pay-icon-1.png) 5px 5px no-repeat #25a9ff
                        background-size 60%
                        border-radius 3px
                        float left
                        margin-left 15px
                        margin-top 3px
            .border-bottom
                border-bottom 1px solid #ccc