.login-box
    width 100%
    height 100%
    background url(../../images/login-bg.jpg) no-repeat
    background-size 100%
    position relative
    .photo
        width 92px
        height 92px
        background #fff
        text-align center
        line-height 92px
        position absolute
        top 10%
        left 50%
        margin-left -46px
        border-radius 100%
        overflow hidden
        img
            width 90px
            height 90px
            border-radius 100%
            margin-top 1px
    .input-area
        width 90%
        height 177px
        position absolute
        top 40%
        left 50%
        margin-left -45%
        ::-webkit-input-placeholder
            color #fff
        .phone,.password
            width 100%
            height 34px
            border-bottom 1px solid #fff
            overflow hidden
            i
                width 20px
                height 20px
                display block
                margin 5px 10px 0 10px
                float left
            input
                color #fff
                border 0
                background-color transparent
                height 34px
                line-height 34px
                float left
                min-width 210px
                width 75%
                font-size .8rem
        .phone
            i
                background url(../i/icon-01.png) no-repeat
                background-size 100%
        .password
            margin-top 15px
            i
                background url(../i/icon-02.png) no-repeat
                background-size 100%
        .login-button
            width 100%
            height 42px
            border-radius 5px
            border 1px solid #fff
            color #fff
            line-height 42px
            text-align center
            margin-top 40px
            &:active
                border 1px solid #cecece
    .footer
        width 100%
        height 33px
        position absolute
        top 90%
        overflow hidden
        color #fff
        .forget
            line-height 16px
            float left
            border-bottom 1px solid #fff
            font-size .8rem
            margin-top 14px
            margin-left 3%
        .log
            width 64px
            height 30px
            line-height 30px
            text-align center
            float right
            border 1px solid #fff
            margin-right 3%

