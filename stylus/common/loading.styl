.loading-box {
    height 50px
    position relative
}
.loading-box .cont{
    margin: 0 auto;
    width: 140px
    overflow hidden
}
.loading-box .cont .loader {
    float:left;
    text-indent: -9999em;
    border-top: 5px solid #e0e0e0;
    border-right: 5px solid #e0e0e0;
    border-bottom: 5px solid #e0e0e0;
    border-left: 5px solid #ffffff;
    -webkit-animation: load 1.1s infinite linear;
    animation: load 1.1s infinite linear;
    margin-top: 5px
}

.loading-box .cont .loading {
    float:left;
    font-size: 16px;
    color: #999;
    margin-left: 15px;
    line-height: 50px
}

.loading-box .cont .loader,
.loading-box .cont .loader:after {
    border-radius: 50%;
    width: 25px;
    height: 25px;
}
@-webkit-keyframes load {
    0% {
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg);
    }
    100% {
        -webkit-transform: rotate(360deg);
        transform: rotate(360deg);
    }
}
@keyframes load8 {
    0% {
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg);
    }
    100% {
        -webkit-transform: rotate(360deg);
        transform: rotate(360deg);
    }
}
