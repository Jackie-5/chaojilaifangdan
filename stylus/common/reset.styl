//reset
html
    width 100%
    height 100%
body, div, h1, h2, h3, h4, h5, h6, p, ul, li, dl, dt, dd, textarea, input, button
    margin 0
    padding 0
    outline none
    font-weight normal

*:not(input,textarea)
    -webkit-touch-callout none
    -webkit-user-select none

body
    font-family 'Microsoft YaHei'
    color #333
    //长按 和 选择
    -webkit-touch-callout none
    -webkit-user-select none
    background-color #fff
    width 100%
button, input, select, textarea
    font-size 100%
    outline none
    line-height 1.5

textarea, input, a
    -webkit-tap-highlight-color rgba(217, 217, 217, 0.5)
    
// should not trigger tap highlight color on disabled elements, or readonly input area
textarea[disabled], input[disabled], a[disabled], textarea[readonly], input[readonly]
    -webkit-tap-highlight-color transparent
input[disabled],input:disabled
    color #333
textarea, input
    resize none
    -webkit-appearance none
    border-radius 0

ul, ol
    list-style none

a
    color #333
    text-decoration none
    &:hover
        text-decoration none

del
    text-decoration line-through

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
    -webkit-appearance none
    margin 0
}

.hide
    display none!important
