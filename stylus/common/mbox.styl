.m-box-bg
    width 100%
    height 100%
    position fixed
    top 0
    left 0
    background rgba(0,0,0,.3)
    z-index 9999999
    .m-box
        font-size .8rem
        width 80%
        position absolute
        left 10%
        background #fff
        border-radius 5px
        padding-top 10px
        z-index 9999
        .m-cont
            text-align center
            padding-bottom 20px
            padding-top 10px
        .m-box-btn
            font-size 1rem
            color #25a9ff
            width 100%
            height 40px
            text-align center
            line-height 40px
            border-top 1px solid #e0e0e0
            display box
            display -webkit-box
            span
                display block
                -webkit-box-flex 1
                box-flex 1
                width 0
                text-align center
                &:last-child
                    border-left  1px solid #e0e0e0