.search-intention
    .intention-list
        .inten-name
            i.s-i-icon-1
            span 项目名称
        .inten-input
            .project.J_inten-project @{it.house_name}
    .intention-list
        .inten-name
            i.s-i-icon-7
            span 购房房号
        .inten-input.house-number
            input.J_inten-number.input-center(type='text',value="@{house_number}")
            .separated 栋
            input.J_inten-floor.input-center(type='text',value="@{house_floor}")
            .separated 层
            input.J_inten-room.input-center(type='text',value="@{house_room}")
            .separated 号
    .intention-list
        .inten-name
            i.s-i-icon-2
            span 建筑面积
        .inten-input
            input.J_inten-area(type='text',value="@{area}")
    .intention-list
        .inten-name
            i.s-i-icon-3
            span 客户姓名
        .inten-input
            input.J_inten-name(type='text',value="@{it.data.customer_name}")
    .intention-list
        .inten-name
            i.s-i-icon-4
            span 联系电话
        .inten-input
            input.J_inten-phone(type='tel',value="@{it.data.customer_mobile}")
    .intention-list
        .inten-name
            i.s-i-icon-5
            span 下一步进度
