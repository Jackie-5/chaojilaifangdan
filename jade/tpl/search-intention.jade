.search-intention
    .intention-list
        .inten-name
            i.s-i-icon-1
            span 项目名称
        .inten-input
            input.J_inten-project(type='text',value="@{it.house_name}",disabled)
    .intention-list
        .inten-name
            i.s-i-icon-2
            span 建筑面积
        .inten-input
            input.J_inten-area(type='text', placeholder='请输入',value="@{it.data.house_area}")
    .intention-list
        .inten-name
            i.s-i-icon-3
            span 客户姓名
        .inten-input
            input.J_inten-name(type='text', placeholder='请输入', value="@{it.data.real_name}")
    .intention-list
        .inten-name
            i.s-i-icon-4
            span 联系电话
        .inten-input
            input.J_inten-phone(type='tel', placeholder='请输入', value="@{it.data.real_mobile}", maxlength="11")
    .intention-list
        .inten-name
            i.s-i-icon-5
            span 下一步进度
        .inten-cont
            .border.J_drop
                i
                span(data-value="@{it.data.order_type}") @{value}
            .drop.J_drop-show.hide
                span(data-value="2") 再次来访
                span(data-value="3") 付意向金
                span(data-value="4") 付定金
                span(data-value="5") 签约
                span(data-value="6") 付款

    .intention-list
        .inten-name
            i.s-i-icon-6
            span 计划时间
        .time-box
            .time
                span @{it.data.diff_days}天
            label.btn-icon
                input#btn-time(type="date")

.search-inten-btn
    span.J_cancel 退订
    span.J_submit 提交
